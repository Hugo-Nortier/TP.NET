<Page x:Class="WPF.Reader.Pages.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      xmlns:model="clr-namespace:WPF.Reader.Model"
      d:DataContext="{d:DesignInstance Type=vm:Accueil, d:IsDesignTimeCreatable=True}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">
    <StackPanel>
        <Grid HorizontalAlignment="Center">
            <Label Content="Accueil" VerticalAlignment="Top" FontSize="40px" FontWeight="Bold" Width="140" Foreground="#ff8b3d"/>
        </Grid>
        <Grid HorizontalAlignment="Center">
            <Button Command="{Binding Path=GoToListOfBooks}" Width="200" Content="Lister Livres" Margin="0 30 0 0" Background="#f7f5bc" FontSize="20"/>
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Command="{Binding Path=GoToListOfGenres}" Width="200" Content="Lister Genres" Margin="0 30 0 0" Background="#f7f5bc" FontSize="20"/>
        </Grid>
    </StackPanel>
</Page>

