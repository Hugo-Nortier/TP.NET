<Page x:Class="WPF.Reader.Pages.ListBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      xmlns:model="clr-namespace:WPF.Reader.Model"
      d:DataContext="{d:DesignInstance Type=vm:ListBook, d:IsDesignTimeCreatable=True}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListBooks">
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Liste des livres" VerticalAlignment="Top" FontSize="40px" FontWeight="Bold" Foreground="#ff8b3d" Margin="10 0 0 30"/>
        <ScrollViewer Grid.Row="2">
            <ListView Name="lvBooks" ItemsSource="{Binding Books}">
                <ListView.ItemTemplate>
				    <DataTemplate>
					    <WrapPanel>
						    <TextBlock Text="Titre:  " />
						    <TextBlock Text="{Binding Nom}" FontWeight="Bold" />
                            <Button Command="{Binding Path=DetailsBook}" CommandParameter="{Binding .}" Width="100" Content="Détails du livre" HorizontalAlignment="Right" Margin="100 0 0 0"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>

